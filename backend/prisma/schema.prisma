// Prisma schema for Retailer Sales Representative App
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  Admin
  SalesRep
}

model User {
  id           Int        @id @default(autoincrement())
  email        String     @unique
  username     String     @unique
  phone        String?    @unique
  password     String
  role         Role
  // Added CreatedBy and UpdatedBy fields would be useful for auditing, but ignoring for now for simplicity

  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  salesRep     SalesRep?
}

model Region {
  id        Int        @id @default(autoincrement())
  name      String     @unique
  areas     Area[]
  retailers Retailer[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model Area {
  id          Int         @id @default(autoincrement())
  name        String
  regionId    Int
  region      Region      @relation(fields: [regionId], references: [id], onDelete: Restrict, onUpdate: Cascade)
  territories Territory[]
  retailers   Retailer[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@unique([name, regionId])
}

model Distributor {
  id        Int        @id @default(autoincrement())
  name      String     @unique
  retailers Retailer[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model Territory {
  id        Int        @id @default(autoincrement())
  name      String
  areaId    Int
  area      Area       @relation(fields: [areaId], references: [id], onDelete: Restrict, onUpdate: Cascade)
  retailers Retailer[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@unique([name, areaId])
}

model Retailer {
  id            Int                @id @default(autoincrement())
  name          String
  phone         String?
  regionId      Int
  region        Region             @relation(fields: [regionId], references: [id], onDelete: Restrict, onUpdate: Cascade)
  areaId        Int
  area          Area               @relation(fields: [areaId], references: [id], onDelete: Restrict, onUpdate: Cascade)
  distributorId Int
  distributor   Distributor        @relation(fields: [distributorId], references: [id], onDelete: Restrict, onUpdate: Cascade)
  territoryId   Int?
  territory     Territory?         @relation(fields: [territoryId], references: [id], onDelete: Restrict, onUpdate: Cascade)
  points        Int                @default(0)
  routes        String             @default("")
  notes         String             @default("")
  createdAt     DateTime           @default(now())
  updatedAt     DateTime           @updatedAt
  assignments   SalesRepRetailer[]

  @@index([regionId])
  @@index([areaId])
  @@index([distributorId])
  @@index([territoryId])
  
  // Added indexes for the 'Search' feature (name, phone)
  @@index([name])
  @@index([phone])
}

model SalesRep {
  id           Int                @id @default(autoincrement())
  name         String
  createdAt    DateTime           @default(now())
  updatedAt    DateTime           @updatedAt
  assignments  SalesRepRetailer[]
  user         User               @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId       Int                @unique
}

model SalesRepRetailer {
  salesRepId Int
  retailerId Int
  assignedAt DateTime @default(now())

  salesRep SalesRep @relation(fields: [salesRepId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  retailer Retailer @relation(fields: [retailerId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@id([salesRepId, retailerId])

  @@index([retailerId])
  @@index([salesRepId])
}
